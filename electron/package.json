{
  "name": "ideas-taxonomy-cms",
  "version": "1.0.0",
  "description": "Electron CMS for managing Ideas, Stories, and Sprints",
  "main": "out/main/main/index.js",
  "private": true,
  "scripts": {
    "dev": "npm run build:once && concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"wait-on http://localhost:5173 && electron .\"",
    "build:once": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:renderer": "vite",
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.preload.json && vite build",
    "dist": "electron-builder",
    "start": "electron .",
    "test:server": "npm run build:once && concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "test:electron": "npm run build:once && playwright test",
    "test:electron:ui": "npm run build:once && playwright test --ui",
    "test:electron:debug": "npm run build:once && playwright test --debug"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.ideas-taxonomy.cms",
    "productName": "Ideas Taxonomy CMS",
    "electronVersion": "28.3.3",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "renderer-dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}

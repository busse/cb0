{
  "name": "ideas-taxonomy",
  "version": "1.0.0",
  "description": "Jekyll Ideas Taxonomy System with Electron CMS",
  "private": true,
  "workspaces": [
    "electron"
  ],
  "scripts": {
    "mcp:playwright": "npx @playwright/mcp@latest",
    "electron:dev": "npm run dev --workspace=electron",
    "electron:build": "npm run build --workspace=electron",
    "electron:dist": "npm run dist --workspace=electron",
    "test:electron": "npm run test:electron --workspace=electron",
    "test:electron:ui": "npm run test:electron:ui --workspace=electron",
    "test:electron:debug": "npm run test:electron:debug --workspace=electron"
  },
  "devDependencies": {
    "@playwright/mcp": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

